<div class="col-md-12">
  <% if current_user && current_user == @moviedataa.user %>
  <div class="group">
    <%= link_to("write a post",new_moviedataa_post_path(@moviedataa), class: "btn btn-default pull-right")%>
    <%= link_to("Edit", edit_moviedataa_path(@moviedataa), class: "btn btn-primary pull-right")%>
  </div>

  <% end %>
  <h2><%= @moviedataa.title %></h2>
  <p><%= @moviedataa.description %></p>
  <table class="table">
    <thead>
      <tr>
        <th>文章内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.user.email%></td>
        <td><%= post.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <%= will_paginate @posts %>
  </div>
